{
  "manifest_version": 3,
  "name": "GitHub Repository Manager",
  "version": "1.0",
  "description": "Quick access to your GitHub repositories with branch information",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://api.github.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "GitHub Repository Manager",
    "default_icon": {
      "16": "icons/github-16.png",
      "32": "icons/github-32.png",
      "48": "icons/github-48.png",
      "128": "icons/github-128.png"
    }
  },
  "icons": {
    "16": "icons/github-16.png",
    "32": "icons/github-32.png",
    "48": "icons/github-48.png",
    "128": "icons/github-128.png"
  }
}